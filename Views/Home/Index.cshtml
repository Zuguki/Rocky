@model Rocky.Models.ViewModels.HomeVM

<div class="container">
    <div class="text-center">
        <h2 class="text-info pt-1">Categories</h2>
        <button class="btn btn-dark filter-button" data-filter="all">All</button>
        @foreach (var obj in Model.Categories)
        {
            <button class="btn btn-outline-secondary filter-button" data-filter="@obj.Name.Replace(' ', '_')">
                @obj.Name
            </button>
        }
        <h2 class="text-info pt-4">ApplicationTypes</h2>
        <button class="btn btn-dark filter-button" data-filter="all">All</button>
        @foreach (var obj in Model.ApplicationTypes)
        {
            <button class="btn btn-outline-secondary filter-button" data-filter="@obj.Name.Replace(' ', '_')">
                @obj.Name
            </button>
        }
    </div>
    <br />
    
    <div class="col-12">
        @foreach (var product in Model.Products)
        {
            <partial name="_IndividulProductCard" model="product"/>
        }
    </div>
</div>
