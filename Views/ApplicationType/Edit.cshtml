@model Rocky.Models.ApplicationType

@{
    ViewBag.Title = "Edit Application Type";
    Layout = "_Layout";
}

<form method="post">
    <input asp-for="Id" hidden/>
    
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit applicetion type</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label>Name</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-success w-100" value="Update"/>
                        </div>
                        <div class="col">
                            <a asp-controller="ApplicationType" asp-action="Index" class="btn btn-info w-100">
                                Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{<partial name="_ValidationScriptsPartial"/>}
}